
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Source Code Of Form Validation</title>
    <!---------------  CSS  --------------------->
    <link rel="stylesheet" href="/css/style.css">
    <!---------------  Font Awesome  --------------------->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
          integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <div class="form_box">
            <!---------------  Toggle Buttons For Login & Register Form --------------------->
            <div class="btn_box">
                <div id="btn"></div>
                <button type="button" class="toggle_btn" onclick="login()">Login</button>
                <button type="button" class="toggle_btn" onclick="register()">Register</button>
            </div>
            <!---------------  Social Icons --------------------->
            <div class="social_icons">
                <a href=""><i class="fa-brands fa-google icon"></i></a>
                <a href=""><i class="fa-brands fa-facebook-f icon"></i></a>
                <a href=""><i class="fab fa-linkedin-in icon "></i></a>
            </div>
            <!---------------  Login Form --------------------->
            <form id="login" action="/Home/LogIn" method="post" class="input_group">
                <div class="form_div">
                    <input type="text" name="Email" class="form_input" placeholder=" " autocomplete="off" required>
                    <label for="" class="form_label">UserName</label>
                </div>
                <div class="form_div">
                    <input type="password" name="Password" class="form_input" placeholder=" " autocomplete="off" required>
                    <label for="" class="form_label">Password</label>
                </div>
                <input type="checkbox" class="checkbox"><span class="check_text">Remember Me</span>
                <a href="/Home/LogIn"><button type="submit" class="submit_btn">Login</button></a>
            </form>
            <!---------------  End Login Form --------------------->
            <!---------------  Register Form --------------------->
            <form id="register" action="/Home/SignUp" method="post" class="input_group">
                <div class="form_div">
                    <input type="text" id="user_name_input" name="Full_name" class="form_input" placeholder=" " autocomplete="off" required>
                    <label for="user_name_input" class="form_label">Full Name</label>
                </div>
                <span id="user_name_error" class="hide danger-color error-msg">Invalid Input</span>
                <span id="user_name_empty" class="hide danger-color error-msg">User Name Can not Be Empty</span>
                <div class="form_div">
                    <input type="email" id="email_input" name="Email" class="form_input" placeholder=" " autocomplete="off" required>
                    <label for="email_input" class="form_label">Email</label>
                </div>
                <span id="email_error" class="hide danger-color error-msg">Invalid Email</span>
                <span id="email_empty" class="hide danger-color error-msg">Email Can not Be Empty</span>
                 <div class="form_div">
                    <input type="password" id="password_input" name="Password" class="form_input" onkeyup="passwordvalidation(this.value)" placeholder=" " autocomplete="off" required>
                    <label for="password_input" class="form_label">Password</label>
                    <!---------------  Password Hide & Show Icon  --------------------->
                    <span class="showbtn"><i id="showbtn" class="fa-solid fa-eye"></i></ion-icon></span>
                </div>
                <span id="password_error" class="hide danger-color error-msg">Password Should Have Letters, Special Symbols & Numbers</span>
                <span id="password_empty" class="hide danger-color error-msg">Password Can not Be Empty</span>
               
                <!---------------  End Password Validation  --------------------->
                <input type="checkbox" class="checkbox"><span class="check_text">I agree to the terms & conditions</span>
               <a href="/Home/SignUp"><button type="submit" id="submit_btn" class="submit_btn">Register</button></a>

            </form>
            <!---------------  End Register Form --------------------->
        </div>
        <!---------------  Success & Error Popup --------------------->
        <div class="popup" id="Valpopup">
            <i class="fa-sharp fa-solid fa-check valicon"></i>
            <h2>Register Successfully!</h2>
            <button class="ok_btn" type="button" onclick="closevalPopup()">OK</button>
        </div>
        <div class="popup" id="errorpopup">
            <i class="fa-solid fa-xmark erroricon"></i>
            <h2>Something Wrong</h2>
            <button class="ok_btn" type="button" onclick="closeerrorPopup()">OK</button>
        </div>
        <!---------------  End Success & Error Popup --------------------->
    </div>
    <!---------------  SCRIPT  --------------------->
    <script src="/css/script.js"></script>
</body>
</html>

